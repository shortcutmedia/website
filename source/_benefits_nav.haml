.benefits-nav-container
  %button{'data-toggle' => "collapse-benefits", 'data-target' => "#benefits-nav-collapse-1"}
    %span{class: "chevron bottom"}

  %ul.benefits-nav#benefits-nav-collapse-1
    -data.benefits.benefits.each_with_index do |benefit, index|
      -# Do not close li tag to prevent li-space bug
      -# https://css-tricks.com/fighting-the-space-between-inline-block-elements/
      -#- if index == 0
        -#\<li class="active">
      -#- else
        -#\<li>
      -#= link_to benefit.url do
        -#= svg_image_tag benefit.icon
        -#%p
          -#= benefit.title

      %li{class: (index == 0 ? 'active' : '')}
        = link_to benefit.url do
          = svg_image_tag benefit.icon
          %p
            = benefit.title

