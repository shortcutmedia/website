---
title: Contact Us - Shortcut
---

<div class="page-wrap clearfix">
  <%= partial "header" %> 
</div>

<div class="page-wrap clearfix info-boxes">

  <section>
    <div class="clearfix">
      <div class="grid-10 offset-1">
        <h1>Contact Us</h1>
        <% info_box_flex(class: 'color-scheme-2 box-padded') do %>
          <article>
            <% form_tag '/don-tknow-yet', class: 'contact-form', method: 'post' do %>
              <% field_set_tag do %>
                <p>
                  <%= text_field_tag :name, placeholder: 'Your Name*' %>
                </p>
                <p>
                  <%= email_field_tag :email, placeholder: 'Your Email*' %>
                </p>
                <p>
                  <%= text_field_tag :subject, placeholder: 'Subject' %>
                </p>
                <p>
                  <%= text_area_tag :message, placeholder: 'Message' %>
                </p>
              <% end %>
              <% field_set_tag(:class => 'buttons') do %>
                <%= submit_tag "Send!" %>
              <% end %>
            <% end %>

          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="grid-10 offset-1">
        <% info_box_flex(class: 'color-scheme-3 box-padded') do %>
